@{
    ViewData["Title"] = "Авторизация"; 
}
@model RemkofFrontend.ViewModels.LoginModel

<div class="container">
    <div class="d-flex justify-content-center">
        <div class="row justify-content-center align-self-center">
            <div class="col flex-column p-3">
                <h2 class="text-center mb-3">Авторизация</h2>
                <form class="align-content-center justify-content-center" asp-action="Login" asp-controller="Auth" asp-antiforgery="true">
                    
                <div class="row">
                    <input type="text" id="login" class="form-control mb-3" name="username" placeholder="Имя пользователя">
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="row">
                    <input type="password" id="password" class="form-control mb-3" name="password" placeholder="Пароль">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
                    <input type="submit" class="btn btn-primary mb-3" value="Войти">
                </form>
            </div>
        </div>

    </div>
</div>